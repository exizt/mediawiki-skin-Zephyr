{
	"name": "Zephyr",
	"version": "2304.5",
	"author": [
		"[https://github.com/exizt exizt]"
	],
	"url": "https://www.mediawiki.org/wiki/Skin:Zephyr",
	"descriptionmsg": "zephyr-desc",
	"namemsg": "skinname-zephyr",
	"type": "skin",
	"requires": {
		"MediaWiki": ">= 1.39.0"
	},
	"ValidSkinNames": {
		"zephyr": {
			"class": "ZephyrSkin",
			"args": [
				{
					"name": "zephyr",
					"responsive": true,
					"toc": true,
					"messages": [
						"zephyr-no-categories",
						"sitetitle",
						"search",
						"otherlanguages",
						"tagline"
					],
					"styles": [
						"mediawiki.ui.icon",
						"mediawiki.ui.button",
						"skins.zephyr.styles"
					],
					"scripts": [
						"skins.zephyr"
					]
				}
			]
		}
	},
    "config_prefix": "wgZephyr",
    "config": {
        "LogoIconWidth": {
            "value": 50
        },
        "LogoIconHeight": {
            "value": 50
        },
        "LogoWordmarkEnabled": {
            "value": true
        }
    },
	"MessagesDirs": {
		"Zephyr": [
			"i18n"
		]
	},
	"ResourceModules": {
		"skins.zephyr.styles": {
            "class": "MediaWiki\\ResourceLoader\\SkinModule",
			"features": {
				"normalize": true,
				"elements": true,
				"content-tables": true,
				"content-links": true,
				"content-media": true,
				"content-links-external": false,
				"interface-message-box": true,
				"interface-category": true,
				"toc": true
			},
			"targets": [
				"desktop",
				"mobile"
			],
			"styles": [
				"resources/skin.less"
			]
		},
		"skins.zephyr": {
			"targets": [
				"desktop",
				"mobile"
			],
			"packageFiles": [
				"resources/skin.js"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteSkinPath": "Zephyr"
	},
	"ResourceModuleSkinStyles": {},
    "AutoloadClasses": {
		"ZephyrSkin": "includes/ZephyrSkin.php"
	},
	"manifest_version": 2
}
